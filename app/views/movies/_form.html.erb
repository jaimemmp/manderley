<%= simple_form_for(@movie) do |f| %>
  <%= image_tag(@movie.photo_url) if @movie.photo? %>
  <%= f.input :photo %>
  <%#= f.input :photo_cache, :hidden %>
  <%= f.input :title %>
  <%= f.input :duration %>
  <%= f.input :synopsis %>
  <%= f.input :year %>
  <%= f.input :categories, collection: Movie::CATEGORIES, as: :check_boxes, label_method: lambda { |x| x.to_s.titleize} %>
  <%= f.submit %>
<% end %>
